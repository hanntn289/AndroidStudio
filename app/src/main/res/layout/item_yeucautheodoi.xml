<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    android:background="#FFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFF">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgavt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/thoigian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textColor="#090101"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imgavt"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btndongykb"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Đồng Ý"
            app:layout_constraintStart_toEndOf="@+id/imgavt"
            app:layout_constraintTop_toBottomOf="@+id/thoigian" />

        <Button
            android:id="@+id/btnhuydongykb"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="Hủy"
            app:layout_constraintStart_toEndOf="@+id/btndongykb"
            app:layout_constraintTop_toBottomOf="@+id/thoigian" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>